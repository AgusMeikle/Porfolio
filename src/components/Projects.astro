---
import Html from "../icons/HtmlIcon.astro";
import Css from "../icons/Css.astro";
import Scss from "../icons/Scss.astro";

const TAGS = {
  HTML: {
    name: "HTML",
    class: "bg-orange-500/20 text-orange-400 border-orange-400/30",
    icon: Html,
  },
  CSS: {
    name: "CSS",
    class: "bg-blue-500/20 text-blue-400 border-blue-400/30",
    icon: Css,
  },
  SCSS: {
    name: "SCSS",
    class: "bg-pink-500/20 text-pink-400 border-pink-400/30",
    icon: Scss,
  },
};

const PROJECTS = [
  {
    title: "Cebate",
    description:
      "Mi primer proyecto adaptado para informar sobre el Mate y sus aspectos culturales.",
    link: "https://cebate.netlify.app/",
    github: "https://github.com/AgusMeikle/Cebate",
    image: "/Projects/CebateScreen.webp",
    tags: [TAGS.HTML, TAGS.CSS, TAGS.SCSS],
  },
];
---

{
  PROJECTS.map(({ title, description, tags, image }) => (
    <article>
      <h3 class="text-2xl font-semibold text-green-200 mb-2">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-2 flex-row mb-2">
        {tags.map((tag) => (
          <li>
            <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}>
              <tag.icon class="size-4" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img
        class="rounded shadow-2xl shadow-white/10"
        src={image}
        alt={`Captura de pantalla del proyecto ${title}`}
      />
    </article>
  ))
}
